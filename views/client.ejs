<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Clientes</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
        }

        #menu {
            position: fixed;
            top: 0;
            left: 0;
            height: 100%;
            width: 250px;
            background-color: #fff;
            color: #e942f5;
            padding: 15px;
            box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
        }

        #menu a {
            color: #000;
            text-decoration: none;
            margin: 10px 0;
        }

        .content {
            margin-left: 270px;
            padding: 20px;
        }

        .form-container {
            margin: 20px 0;
        }

        .form-container input,
        .form-container textarea {
            display: block;
            margin: 10px 0;
            padding: 10px;
            width: 100%;
        }

        .form-container button {
            padding: 10px;
            background-color: #333;
            color: #fff;
            border: none;
            cursor: pointer;
        }

        .client-list {
            margin: 20px 0;
        }

        .client-item {
            border: 1px solid #ccc;
            padding: 10px;
            margin-bottom: 10px;
        }

        .client-item button {
            margin-right: 10px;
            padding: 5px 10px;
            background-color: #333;
            color: #fff;
            border: none;
        }
    </style>
</head>
<body>
    <div id="menu">
        <h2>PERFUMARIA</h2>
        <a href="/">Inicial</a><br><br>
        <a href="/vendas">Vendas</a><br><br>
        <a href="/produtos">Produtos</a><br><br>
        <a href="/clientes">Clientes</a><br><br>
        <a href="/vendedores">Vendedores</a><br><br>
        <a href="/sobre">Sobre</a>
    </div>

    <div class="content">
        <h1>Gerenciar Clientes</h1>

        <!-- Formulário de criação de cliente -->
        <div class="form-container">
            <h2>Criar Cliente</h2>
            <form id="createClientForm">
                <input type="text" name="nome" placeholder="Nome do cliente" required>
                <input type="number" name="idade" placeholder="Idade do cliente" step="0.01">
                <input type="text" name="email" placeholder="Email do cliente" required>
                <input type="text" name="endereco" placeholder="Endereço do Cliente" step="0.01" required>
                <input type="text" name="telefone" placeholder="Telefone do Cliente" required>
                <button type="submit">Criar Cliente</button>
            </form>
        </div>

        <!-- Lista de clientes -->
        <div class="client-list" id="clientList">
            <% if (clientes.length > 0) { %>
                <% clientes.forEach(cliente => { %>
                    <div class="client-item">
                        <p><strong><%= cliente.nome %></strong></p>
                        <p>Descrição: <%= cliente.idade %></p>
                        <p>Preço: <%= cliente.email %></p>
                        <p>Estoque: <%= cliente.endereco %></p>
                        <p>Categoria: <%= cliente.telefone %></p>
                        <button onclick="deleteClient(cliente.id)">Deletar</button>
                    </div>
                <% }); %>
            <% } else { %>
                <p>Nenhum cliente encontrado.</p>
            <% } %>
        </div>
    </div>

    <script>
        const apiUrl = '/api/clientes';

        // Função para listar clientes
        async function fetchClients() {
            const response = await fetch(apiUrl);
            const clients = await response.json();
            console.log(clients);
            const clientList = document.getElementById('clientList');
            clientList.innerHTML = '';

            clients.forEach(client => {
                const clientItem = document.createElement('div');
                clientItem.className = 'client-item';
                clientItem.innerHTML = `
                    <p><strong>${client.nome}</strong></p>
                    <p>Idade: ${client.idade}</p>
                    <p>Email: ${client.email}</p>
                    <p>Endereço: ${client.endereco}</p>
                    <p>Telefone: ${client.telefone}</p>
                    <button onclick="deleteClient(${client.id})">Deletar</button>
                `;
                clientList.appendChild(clientItem);
            });
        }

        document.getElementById('createClientForm').addEventListener('submit', async (e) => {
        e.preventDefault();
        const formData = new FormData(e.target);
        const data = Object.fromEntries(formData.entries());
        console.log('Dados enviados:', data); // Exibe os dados enviados no console do navegador

        try {
            const response = await fetch(apiUrl, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data),
            });

            if (!response.ok) {
                throw new Error(`Erro na API: ${response.status} - ${response.statusText}`);
            }

            e.target.reset();
            fetchClients();
        } catch (error) {
            console.error('Erro ao criar cliente:', error);
            alert('Erro ao criar o cliente. Verifique os dados e tente novamente.');
        }
        });

        // Função para deletar cliente
        async function deleteClient(id) {
            await fetch(`${apiUrl}/${id}`, { method: 'DELETE' });
            fetchClients();
        }

        // Carrega os clientes ao iniciar
        fetchClients();
    </script>
</body>
</html>